@model MVCcrud.Context.StudentTable

@{
    ViewBag.Title = "Student";
}
<style>
    .error{
        color:red;
    }
</style>

<h2>Student</h2>

@using (Html.BeginForm("AddStudent", " Student", FormMethod.Post))
{
<div class="container">
    <div class="form-group">
        <label>Name</label>
        @Html.ValidationMessageFor( x => x.Name,"", new { @class="error"})
        @Html.TextAreaFor(x => x.Name, new { @class = "form-control" })


    </div>
    <div class="form-group">
        <label>EmailAddress</label>
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })

        @Html.TextAreaFor(x => x.Email, new { @class = "form-control" })


    </div>
    <div class="form-group">
        <label>City</label>
        @Html.ValidationMessageFor(x => x.City, "", new { @class = "error" })

        @Html.TextAreaFor(x => x.City, new { @class = "form-control" })


    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary" >Submit</button>
        <button type="reset"class="btn btn-primary" >Reset</button>
    </div>
   </div>
}


